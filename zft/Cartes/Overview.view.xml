					<ObjectStatus	text	=	"{i18n>ADD_CRITERE}"
									id		=	"addCritere"
									visible	=	"false"
									state	=	"Error"/>
					
					<ToolbarSpacer/>
					
					<Button 	text 	=	"{i18n>DUPLICATE}"
