					</t:template>
				</t:Column>						

				<t:Column 	sortProperty	 	=	"APFIN" >
					<Label 			text 				=	"{i18n>VALIDE_TO}"/>
					<t:template>
						<DatePicker displayFormat 		= 	"dd.MM.yyyy"
									value				=	"{CarteService>APFIN}"
									editable			=	"false"/>
					</t:template>
				</t:Column>
				
				<t:Column 	sortProperty	 	=	"RSTAT" >
					<Label 			text 				=	"{i18n>STATUS}"/>
					<t:template>
						<ComboBox	items			=	"{VHService>/VHCAStatusSet/}"
