					</t:template>
				</t:Column>

				<t:Column 	sortProperty	 	=	"APDEB" >
					<Label 			text 				=	"{i18n>VALIDE_FROM}"/>
					<t:template>
						<DatePicker displayFormat 		= 	"dd.MM.yyyy"
									value				=	"{CarteService>APDEB}"
