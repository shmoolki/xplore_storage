								icon 	=	"sap-icon://copy"
								type 	=	"Default"
								id 		=	"duplicateButton"
								visible =	"false"/>
					<Button 	text 	=	"{i18n>NEW_PRODUCT}"
								press 	=	"NewCartePress"
								icon 	=	"sap-icon://add"
								class 	=	"sapUiSmallMarginEnd"
								type 	=	"Default"
								visible	=	"{Edit>/Create}"/>

				</Toolbar>
			</t:toolbar>

